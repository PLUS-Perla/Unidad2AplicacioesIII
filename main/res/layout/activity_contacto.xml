<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.utng.edu.contacto.MainActivity"
    android:layout_marginTop="10pt">


    <TextView
        android:id="@+id/txv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/m_top"
        android:text="Nombre:"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/m_left"
        android:textSize="@dimen/txv_size" />

    <EditText
        android:id="@+id/edt_text_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txv_nombre"
        android:layout_toEndOf="@+id/txv_nombre"
        android:layout_toRightOf="@+id/txv_nombre"
        android:textSize="@dimen/txv_size" />
        />

    <TextView
        android:id="@+id/txv_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_text_data"
        android:layout_marginTop="@dimen/m_top"
        android:text="@string/message"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/m_left"
        android:textSize="@dimen/txv_size" /> />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_mensaje"
        android:layout_alignStart="@+id/txv_mensaje"
        android:layout_below="@+id/txv_mensaje"
        android:layout_marginTop="@dimen/m_top"
        android:layout_marginRight="@dimen/m_right"
        android:gravity="center"
        android:lines="5"
        android:singleLine="false" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10pt"
        android:layout_marginEnd="10pt"
        android:layout_marginRight="0pt"
        android:text="@string/submit"
        android:background="@color/orange"/>


</RelativeLayout>
