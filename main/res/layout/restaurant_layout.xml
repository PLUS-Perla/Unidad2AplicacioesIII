<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Restaurantes"
        android:textSize="@dimen/title1"
        android:layout_marginTop="5pt"
        android:textStyle="bold" />

    <ImageSwitcher
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="80pt"
        android:background="@color/orange"
        android:id="@+id/imv_habitacion_suite"
        android:layout_below="@+id/titulo_service"
        android:layout_margin="10pt">
    </ImageSwitcher>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ant"
        android:textSize="@dimen/title3"
        android:textColor="@color/black"
        android:background="@color/orange"
        android:textStyle="bold"
        android:id="@+id/btn_previus"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imv_habitacion_suite"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="-5pt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textSize="@dimen/title3"
        android:background="@color/orange"
        android:id="@+id/btn_next"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imv_habitacion_suite"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10pt"
        android:layout_marginTop="-5pt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion"
        android:textSize="@dimen/title2"
        android:id="@+id/txv_description"
        android:layout_below="@id/btn_previus"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="5pt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_description"
        android:textSize="@dimen/txv_special"
        android:textStyle="italic"
        android:id="@+id/txv_text_description"
        android:layout_below="@id/txv_description"
        android:layout_marginLeft="15pt"/>

    <TextView
        android:id="@+id/txv_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precio"
        android:layout_below="@id/txv_text_description"
        android:textSize="@dimen/title3"
        android:layout_marginLeft="11pt"/>
    <TextView
        android:id="@+id/txv_text_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3500"
        android:layout_marginLeft="50pt"
        android:textSize="@dimen/title3"
        android:layout_below="@id/txv_text_description"
        android:layout_marginTop="2pt"
        android:textColor="#943126"/>

    <Button
        android:layout_width="50pt"
        android:layout_height="15pt"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Reservar"
        android:textStyle="italic"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:layout_below="@+id/txv_text_prize"
        android:layout_marginTop="2pt"
        android:layout_marginLeft="115pt"
        android:id="@+id/btn_reservar"/>
</RelativeLayout>